{% extends 'base.html.twig' %}

{% block title %} Modification de l'annonce {% endblock %}

{% form_theme form 'ad/_Collection.html.twig' %}

{% block body %}

    <div class="container">
        <h1>Modifié l'annonce: {{ ad.title }}</h1>

        {{ form_start(form) }}

        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Modifié l'annonce</button>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}
<script src="/js/ad.js"></script>
{% endblock %}