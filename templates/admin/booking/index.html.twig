{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des réservations{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des réservations</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Locataire</th>
                    <th>Annonce</th>
                    <th>Durée</th>
                    <th>Montant</th>
                    <th>Actions</th>
                </tr>
                <tbody>
                    {% for booking in pagination.data %}
                    <tr>
                        <td>{{booking.id}}</td>
                        <td>{{booking.createdAt | date('d/m/Y')}}</td>
                        <td>
                            <img src="{{booking.booker.picture}}" alt="" class="avatar-mini">
                            {{booking.booker.fullName}}
                        </td>
                        <td>{{booking.ad.title}}</td>
                        <td>{{booking.getDuration}}</td>
                        <td>{{booking.amount}}</td>
                        <td>
                            <a href="{{ path('admin_bookings_edit', {'id' : booking.id}) }}" class="btn btn-info"><i class="fas fa-pen"></i></a>
                            <a href="{{ path('admin_bookings_delete', {'id' : booking.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </thead>
        </table>
        {{ pagination.display }}
    </div>
{% endblock %}
